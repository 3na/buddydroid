<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    >
    <LinearLayout
	    android:orientation="horizontal"
	    android:baselineAligned="false"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#DDDDDD"
		>
		<LinearLayout 
			android:id="@+id/list_pane"
		    android:layout_width="0dp"
		    android:layout_weight="0.5"
			android:layout_height="match_parent"
			android:orientation="vertical"
		    >
			<LinearLayout 
				android:id="@+id/filter_pane"
			    android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="#999999"
				android:padding="12dp"
			    >
	  			<TextView
				    android:id="@+id/filter_text"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:textColor="#FFFFFF"
					android:text="@string/filter_by"
					android:textSize="20sp"
					android:layout_gravity="center"
					android:gravity="center"
					android:layout_marginRight="8dp"
				    />
		        <Spinner
			        android:id="@+id/filters"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:padding="10dp"
					android:background="#FFFFFF"
			        android:entries="@array/filters"
			        android:prompt="@string/filter_prompt" 
					/>
		   		<LinearLayout 
					android:id="@+id/site_links"
				    android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="right"
				    >
		      	        <TextView 
				        android:id="@+id/visit_site"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:textSize="24sp"
				        android:gravity="center"
				        android:layout_gravity="center_vertical"
				        android:textColor="#FFFFFF"
				        android:paddingLeft="20dp"
				        android:paddingRight="20dp"
						android:text="@string/visit_site"
			            />
		   		    <TextView 
				        android:id="@+id/notifications"
				        android:layout_width="40dp"
				        android:layout_height="40dp"
				        android:textSize="24sp"
				        android:textStyle="bold"
				        android:gravity="center"
				        android:layout_gravity="center_vertical"
				        android:textColor="#FFFFFF"
						android:background="#555555"
						android:text="@string/zero"
			            />
				</LinearLayout>
			</LinearLayout>
		    <ListView android:id="@+id/android:list"
		        android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:clipToPadding="false"
				android:padding="10dp"
				android:dividerHeight="10dp"
		        android:divider="@drawable/divider"
		       	/>
		</LinearLayout>
		<RelativeLayout
			android:id="@+id/submit_pane"
			android:layout_height="fill_parent"
	        android:layout_width="0dp"
	        android:layout_weight="0.5"
			android:background="#E9E9E9"
		    >
		    <ScrollView
				android:id="@+id/content_parent"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
				android:overScrollMode="always"
				android:fillViewport="true"
				android:background="#ffffff"
				android:layout_marginBottom="80dp"
				>
				<LinearLayout 
					android:id="@+id/edit_parent" 
					android:orientation="horizontal"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    >
			   		<EditText 
						android:id="@+id/text_content"
						android:hint="@string/statusHint"
						android:layout_width="match_parent" 
						android:layout_height="fill_parent"
						android:gravity="top"
						android:autoLink="web"
						android:linksClickable="false"
						android:padding="20dip"
						android:scrollHorizontally="false"
						android:inputType="textMultiLine"
						android:singleLine="false"
						android:textSize="20sp"
						android:background="#FFFFFF"
						android:textColor="#000000"
						android:textCursorDrawable="@null"
						/>
				</LinearLayout>
			</ScrollView>
			<Button 
			    android:text="@string/submit" 
			    android:id="@+id/submit"
				android:layout_width="match_parent" 
				android:layout_height="wrap_content"
				android:width="150dip" 
				android:textSize="25sp" 
				android:height="80dip"
				android:layout_alignParentBottom="true"
				android:background="#FFFFFF"
				android:textColor="#000000"
				/>
			<ImageView
				android:layout_width="match_parent" 
				android:layout_height="2dp"
				android:layout_above="@id/submit"
				android:layout_centerHorizontal="true"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:background="#DDDDDD"
				/>
		</RelativeLayout>
	</LinearLayout>
	 <SlidingDrawer
		android:id="@+id/drawer"
		android:layout_width="match_parent"
		android:layout_height="300dp"
		android:handle="@+id/handle"
		android:content="@+id/contents"
		android:layout_alignParentBottom="true"
		>

	    <ImageView
			android:id="@id/handle"
			android:src="@drawable/tray_grip"
			android:background="@drawable/tray_handle"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			/>
		<RelativeLayout
			android:layout_height="match_parent"
	        android:layout_width="match_parent"
			android:background="#E9E9E9"
			android:id="@+id/contents"
		    >
		    <ScrollView
				android:id="@+id/content_drawer"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
				android:overScrollMode="always"
				android:fillViewport="true"
				android:background="#ffffff"
				android:layout_marginBottom="80dp"
				>
				<LinearLayout 
					android:id="@+id/edit_drawer" 
					android:orientation="horizontal"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    >
			   		<EditText 
						android:id="@+id/text_drawer"
						android:hint="@string/statusHint"
						android:layout_width="match_parent" 
						android:layout_height="fill_parent"
						android:gravity="top"
						android:autoLink="web"
						android:linksClickable="false"
						android:padding="20dip"
						android:scrollHorizontally="false"
						android:inputType="textMultiLine"
						android:singleLine="false"
						android:textSize="20sp"
						android:background="#FFFFFF"
						android:textColor="#000000"
						android:textCursorDrawable="@null"
						/>
				</LinearLayout>
			</ScrollView>
			<Button 
			    android:text="@string/submit" 
			    android:id="@+id/submit_drawer"
				android:layout_width="match_parent" 
				android:layout_height="wrap_content"
				android:width="150dip" 
				android:textSize="25sp" 
				android:height="80dip"
				android:layout_alignParentBottom="true"
				android:background="#FFFFFF"
				android:textColor="#000000"
				/>
			<ImageView
				android:layout_width="match_parent" 
				android:layout_height="2dp"
				android:layout_above="@id/submit_drawer"
				android:layout_centerHorizontal="true"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:background="#DDDDDD"
				/>
		</RelativeLayout>
 	</SlidingDrawer>
</RelativeLayout>