<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="@string/userPref">
	    <Preference 
	 		android:key="help"
			android:title="@string/help"
			/>
   		<EditTextPreference 
   		    android:key="website"
			android:title="@string/website"
			android:shouldDisableView="true"
			android:singleLine="true"/>
   		<EditTextPreference 
   		    android:key="username"
			android:title="@string/username"
			android:shouldDisableView="true"
			android:singleLine="true"/>
   		<Preference 
   		    android:key="register"
			android:title="@string/register"
			/>
   		<Preference 
   		    android:key="api_key"
			android:title="@string/api_key"
			android:summary="@string/api_key_desc"
			/>

   	</PreferenceCategory>   
	<PreferenceCategory android:title="@string/advPref">
     	<EditTextPreference 
   		    android:key="service_name"
			android:title="@string/serviceName"
			android:summary="@string/serviceNameDesc"
			android:shouldDisableView="true"
			android:singleLine="true"/>
	    <EditTextPreference 
   		    android:key="member_slug"
			android:title="@string/memberSlug"
			android:summary="@string/memberSlugDesc"
			android:shouldDisableView="true"
			android:singleLine="true"/>
	    <CheckBoxPreference
	        android:key="auto_update"
	        android:defaultValue="true"
	        android:title="@string/autoUpdate"
	        />
   	</PreferenceCategory>   
   	    	
</PreferenceScreen>
